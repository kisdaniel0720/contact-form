{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="container py-5">
    <div class="row py-5 g-3">

        <div class="col-md-6 first_col ">
            <h1 class="text-center mt-3">Kapcsolat</h1>
           {{ form_start(form, {'method': 'POST'}) }}

                {# Successful sending #}
                {% for success in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong><i class="bi bi-check-circle-fill"></i></strong> {{ success }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                {# Incorrect form filling #}
                {% set formErrors = form.vars.errors.form.getErrors(true) %}
                {% if formErrors|length %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong><i class="bi bi-exclamation-circle-fill"></i></strong>Hiba! Kérjük töltsd ki az összes mezőt!
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endif %}

           {{ form_end(form) }}

        </div>

    </div>
</div>
{% endblock %}
